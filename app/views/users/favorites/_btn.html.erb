<% if post.favorited_by?(current_user) %>
  <%= link_to users_post_favorites_path(post), method: :delete, remote: true, class: "text-danger" do %>
    いいね!:♥<%= post.favorites.count %> 
  <% end %>
<% else %>
  <%= link_to users_post_favorites_path(post), method: :post, remote: true, class: "text-secondary" do %>
    いいね!:♡<%= post.favorites.count %> 
  <% end %>
<% end %>