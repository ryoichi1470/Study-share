<h1 class="text-center my-0">コメント編集</h1>

<div class="container-fluid vh-80 d-flex flex-column justify-content-center">
  <div class="row flex-grow-1">
    <div class="col-md-4 text-center">
      <%= image_tag 'PAK36_doremoiroenpitu20131005_TP_V4.jpg', alt: '左の画像', class: 'img-fluid left-image' %>
    </div>

    <div class="col-md-4">
      <div class="post-edit mt-5">
        <%= form_with(model: [ @post, @comment ], url: users_post_comment_path(@post, @comment), method: :patch, local: true) do |f| %>
          <% if @comment.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@comment.errors.count, "エラー") %>が発生しました:</h2>
              <ul>
                <% @comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3 mt-5">
            <h4 class="form-label">コメント内容</h4>
            <%= f.text_area :content, required: true, class: "form-control", rows: 5, value: @comment.content %>
          </div>

          <div class="d-flex justify-content-center mt-3">
            <%= f.submit '更新', class: "btn btn-primary mr-3" %>
            <%= link_to '削除', users_post_comment_path(@post, @comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
          </div>

        <% end %>
      </div>

      <div class="text-center mt-5">
        <%= link_to '戻る', users_post_path(@post), class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="col-md-4 text-center">
      <%= image_tag 'PAK36_doremoiroenpitu20131005_TP_V4.jpg', alt: '右の画像', class: 'img-fluid right-image' %>
    </div>
  </div>
</div>

<style>
  h1 {
    background-color: #001f3f;
    color: white;
  }

  .left-image, .right-image {
    opacity: 0.3;
  }
</style>
