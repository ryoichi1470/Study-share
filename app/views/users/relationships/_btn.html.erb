<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", users_relationships_path(user_id: @user.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", users_relationships_path(user_id: @user.id), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>