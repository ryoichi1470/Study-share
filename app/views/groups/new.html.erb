<h1 class="text-center my-0" style="background-color: #001f3f; color: white;">新しいグループを作成</h1>

<div class="container-fluid vh-80 d-flex flex-column justify-content-center">
  <div class="row flex-grow-1">
    <div class="col-md-4 text-center">
      <%= image_tag 'uchino_6270000033_TP_V4.jpg', alt: '左の画像', class: 'img-fluid' %>
    </div>

    <div class="col-md-4">
      <%= form_with model: @group, url: groups_path, local: true do |f| %>
        <% if @group.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2><%= pluralize(@group.errors.count, "エラー") %>が発生しました:</h2>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3 mt-5">
          <h4 class="form-label">グループ名</h4>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <h4 class="form-label">テーマ</h4>
          <%= f.text_field :theme, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <h4 class="form-label">ルール</h4>
          <%= f.text_area :rules, required: true, class: "form-control", rows: 5 %>
        </div>

        <div class="text-center">
          <%= f.submit 'グループを作成', class: "btn btn-primary" %>
        </div>

        <div class="mt-5 text-center">
          <p>素敵なグループを作成しましょう！</p>
        </div>
      <% end %>
    </div>

    <div class="col-md-4 text-center">
      <%= image_tag 'uchino_6270000033_TP_V4.jpg', alt: '右の画像', class: 'img-fluid' %>
    </div>
  </div>
</div>
