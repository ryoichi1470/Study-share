<div class="container mt-5">
  <div class="card">
    <div class="card-header text-center header">
      <h2>グループ編集</h2>
    </div>
    <div class="card-body">
      <!-- エラーメッセージ表示部分 -->
      <% if @group.errors.any? %>
        <div class="alert alert-danger">
          <h4>次のエラーがあります:</h4>
          <ul>
            <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "グループ名" %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :theme, "テーマ" %>
          <%= f.text_field :theme, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :rules, "ルール" %>
          <%= f.text_area :rules, class: 'form-control' %>
        </div>

        <%= f.submit '更新', class: 'btn btn-primary' %>
      <% end %>

      <div class="mt-3 text-center">
        <%= link_to 'グループ詳細に戻る', group_path(@group), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>


<style>
  .header {
    background-color: #001f3f; 
    color: white; 
  }
</style>
