<h1 class="text-center">ユーザー一覧</h1>

<div class="container mt-4">
  <div class="table-responsive">
    <table class="table table-dark table-hover table-bordered">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, user_mypage_path(user) %></td>
            <td><%= user.email %></td>
            <td>
              <p>状態: <%= user.active? ? "有効" : "無効" %></p>
            </td>
            <td>
              <%= link_to user.active? ? "無効にする" : "有効にする", toggle_active_admin_user_path(user), method: :patch, class: 'btn btn-warning' %>
            </td>
            <td>
              <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="text-center mt-4 mb-4">
    <%= link_to '戻る', mypage_path, class: 'btn btn-secondary' %>
  </div>
</div>

<style>
  body {
    background-color: #1c1c1c;
  }

  h1 {
    background-color: #343a40;
    border-radius: 5px;
    color: #ffffff;
    padding: 20px;
  }

  table {
    background-color: #2c2f33;
    color: #ffffff;
  }

  th, td {
    text-align: center;
  }

  .btn-danger {
    background-color: #dc3545;
    border: none;
  }

  .btn-danger:hover {
    background-color: #c82333;
  }

  .btn-warning {
    background-color: #ffc107;
    border: none;
  }

  .btn-warning:hover {
    background-color: #e0a800;
  }

  @media (max-width: 767px) {
    h1 {
      font-size: 1.5rem;
      padding: 15px;
    }

    .btn-danger, .btn-secondary, .btn-warning {
      font-size: 0.9rem;
      padding: 8px 12px;
    }

    th, td {
      font-size: 0.9rem;
      padding: 8px;
    }
  }
</style>
